<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newMemberConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:alpha="0"
    android:translationY="-20dp">

    <ImageView
        android:id="@+id/newMemberLayoutImg"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dot_unselected" />

    <TextView
        android:id="@+id/newMemberLayoutLblRole"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:fontFamily="@font/open_sans_regular"
        android:outlineProvider="none"
        android:text="Date"
        android:textAlignment="center"
        android:textColor="@color/colorGrey"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/newMemberLayoutImg"
        app:layout_constraintStart_toStartOf="@+id/newMemberLayoutImg"
        app:layout_constraintTop_toBottomOf="@+id/newMemberLayoutLblName" />

    <TextView
        android:id="@+id/newMemberLayoutLblName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:elevation="10dp"
        android:outlineProvider="none"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/newMemberLayoutImg"
        app:layout_constraintStart_toStartOf="@+id/newMemberLayoutImg"
        app:layout_constraintTop_toBottomOf="@+id/newMemberLayoutImg" />

    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="170dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="-64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newMemberLayoutImg"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>