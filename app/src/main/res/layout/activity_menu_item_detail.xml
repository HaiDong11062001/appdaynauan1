<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/menuItemDetailImgBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:alpha="0"
                    android:background="@android:color/transparent"
                    android:translationY="-180dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_fooditemtop" />

                <TextView
                    android:id="@+id/menuItemDetailBtnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="&lt; Back"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:translationX="-20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/menuItemDetailImg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-150dp"
                android:alpha="0"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:translationY="-30dp"
                app:srcCompat="@drawable/dot_unselected" />

            <TextView
                android:id="@+id/menuItemDetailLblName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:alpha="0"
                android:text="Sushi"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textStyle="bold"
                android:translationY="-20dp" />

            <TextView
                android:id="@+id/menuItemDetailLblIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:alpha="0"
                android:background="@android:color/transparent"
                android:text="Ingredients"
                android:textSize="18sp"
                android:translationX="-20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menuItemDetailRecViewIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/menuItemDetailLblDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:alpha="0"
                android:background="@android:color/transparent"
                android:text="Processing method"
                android:textSize="18sp"
                android:translationX="-20dp" />

            <TextView
                android:id="@+id/menuItemDetailLblDescriptionValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:alpha="0"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_light"
                android:text="TextView"
                android:textColor="@color/colorGrey"
                android:translationY="-10dp" />

            <TextView
                android:id="@+id/menuItemDetailLblDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:alpha="0"
                android:background="@android:color/transparent"
                android:text="Food Details"
                android:textSize="18sp"
                android:translationX="-20dp" />

            <TextView
                android:id="@+id/menuItemDetailLblDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:alpha="0"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_light"
                android:text="1 portion of this {{ foodName }} contains :"
                android:textColor="@color/colorGrey"
                android:translationY="-10dp" />

            <LinearLayout
                android:id="@+id/menuItemDetailLinearLayoutFoodDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical"></LinearLayout>

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>